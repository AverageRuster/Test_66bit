@model IEnumerable<Player>

@{
    ViewBag.Title = "Все пользователи";
}

<a asp-action="AddOrEditPlayer" asp-route-add="true">Добавить</a>
<table class="table">
    <tr>
        <td>Имя</td>
        <td>Фамилия</td>
        <td>Пол</td>
        <td>Дата рождения</td>
        <td>Команда</td>
        <td>Страна</td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            @if (item.Gender)
            {
                <td>Мужчина</td>   
            }
            else
            {
                <td>Женщина</td>
            }
            <td>@item.BirthDate</td>
            @if (item.Team != null)
            {
                <td>@item.Team.Name</td>
            }
            else
            {
                <td></td>
            }
            <td>@item.Country</td>
            <td>
                <a asp-controller="Players" asp-action="AddOrEditPlayer" asp-route-id="@item.Id" asp-route-add="false">Изменить</a>
            </td>
            <td>
                <a asp-controller="Players" asp-action="RemovePlayer" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>
